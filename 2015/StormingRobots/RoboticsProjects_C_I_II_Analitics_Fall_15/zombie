#include "Library.c"

task main()
{
	SensorType[S3] = sensorLightActive;
	SensorType[S4] = sensorSONAR;
	delay(100);
	int i = 0;
	int q = 3;
	//While Sonar Sensor does not see silver
	//while (SensorType[S3] < silverThresh)
	while(i<3)
	{
		//Check if Ultrasonic sensor sees object
		if (SensorValue[S4] <=65)
		{
			//play sound
			i++;
			q++;
			//Set the distance. The way this works is that when the ultrasonic sensor sees the zombie, set the value of the zombie, and then check until it sees somthing greater then that distance.
			//That means that it passed the zombie.
			int dist = SensorValue[S4];
			
			//while it sees zombie line trace
			while(SensorValue[S4] <=dist+5)
			{
				LineTrace();
			}
			int X = (nMotorEncoder[Lm]/EncPerCm)-15;
			int Y = dist-10;
			//displayTextLine(q,"x2=%d y2=%d", X, Y);
			drawEllipse(X-5,Y+5,X+5,Y-5);
		}
		//If it sees nothing, line trace
		else
		{
			LineTrace();
		}
	}
	motor[motorB] = 0;
	motor[motorC] = 0;
	wait1Msec(10000);
}





























void LineTrace()
{
	if (SensorValue[S3] >= thresh)
	{
		motor[Lm] = 50;
		motor[Rm] = 0;
	}
	else
	{
		motor[Lm] = 0;
		motor[Rm] = 50;
	}
}
